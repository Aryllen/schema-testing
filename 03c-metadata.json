{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id":"nkauer-ad.metadata",
    "description": "SysBio AD metadata annotations schema",
    "allOf": [
        {
            "properties": {
                "metadataType": {
                    "$ref": "sage.annotations-experimentalData.metadataType"
                },
                "dataSubtype": {
                    "enum": [ "metadata" ]
                }
            },
            "required": [
                "metadataType",
                "dataSubtype"
            ]
        },
        {
            "$ref": "nkauer-ad.all.files"
        },
        {
            "if": {
                "properties": {
                    "metadataType": {
                        "enum": [
                            "individual",
                            "biospecimen"
                        ]
                    }
                }
            },
            "then": {
                "allOf": [
                    {
                        "properties": {
                            "dataType": {
                                "enum": ["clinical"]
                            }
                        },
                        "required": [
                            "dataType"
                        ]
                    }
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "metadataType": {
                        "enum": [
                            "assay"
                        ]
                    }
                }
            },
            "then": {
                "allOf": [
                    {
                        "properties": {
                            "dataType": {
                                "$ref": "sage.annotations-experimentalData.dataType"
                            }
                        },
                        "required": [
                            "dataType"
                        ]
                    }
                ]
            }
        }
    ]
}
